generator client {
  provider = "prisma-client-js"
  // output   = "./node_modules/@prisma/client"
  // output   = "../src/generated/prisma"
  output   = "../src/prisma/client"
}

datasource db {
  provider = "mysql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Post {
  id    Int    @id @default(autoincrement())
  name  String
  likes Int
}
